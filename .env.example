# Configuración del Server
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=10s

# Configuración de Base de Datos MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=telemetria
MYSQL_MAX_OPEN_CONNS=25
MYSQL_MAX_IDLE_CONNS=5
MYSQL_CONN_MAX_LIFETIME=5m

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_CACHE_TTL=24h

# Configuración de MQTT
MQTT_ENABLED=false
MQTT_BROKER_URL=tcp://localhost:1883
MQTT_CLIENT_ID=telemetry-endpoint
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=telemetry/data
MQTT_QOS=1
MQTT_CLEAN_SESSION=true

# Configuración de Rate Limiting
RATE_LIMIT_RPS=100.0
RATE_LIMIT_BURST=200
REQUEST_DELAY=10ms

# Configuración de Logging
LOG_DIR=./logs
APP_LOG_FILE=app.log
INVALID_LOG_FILE=invalid_requests.log
DEVICE_LOG_DIR=./logs/devices
